    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run server",
            "runtimeExecutable": "${workspaceFolder}/api/node_modules/nodemon/bin/nodemon.js",
            "program": "${workspaceFolder}/api/index.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
                "port": 9229
        }
    ]
}